<IfModule mod_rewrite.c>
  RewriteEngine On

  # ✅ Canonical redirect: www → non-www
  RewriteCond %{HTTP_HOST} ^www\.arkaxus\.com$ [NC]
  RewriteRule ^(.*)$ https://arkaxus.com/$1 [L,R=301]

  # ✅ Allow direct access to existing files & folders (VERY IMPORTANT)
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ✅ React SPA fallback (only for routes)
  RewriteRule ^ index.html [L]
</IfModule>
